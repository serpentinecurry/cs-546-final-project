<style>
  body {
    background-color: #f1f5f9;
    font-family: "Segoe UI", sans-serif;
  }

  .login-wrapper {
    display: flex;
    min-height: 100vh;
    overflow: hidden;
  }

  .login-left {
    background: linear-gradient(135deg, #4f46e5, #0ea5e9);
    color: white;
    padding: 4rem;
    flex: 1.3;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .login-left img {
    max-width: 160px;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
    margin-bottom: 1.5rem;
  }

  .login-left h1 {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 0.8rem;
  }

  .login-left p {
    font-size: 1.15rem;
    max-width: 400px;
    margin-bottom: 2rem;
    color: #f0f9ff;
  }

  .login-left ul {
    text-align: left;
    margin-top: 2rem;
    padding-left: 0;
    list-style: none;
  }

  .login-left ul li {
    margin-bottom: 0.75rem;
    font-size: 1.05rem;
  }

  .login-left ul li::before {
    content: "✅";
    margin-right: 0.5rem;
  }

  .login-right {
    flex: 1;
    background-color: white;
    padding: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .login-right h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    font-weight: 600;
    color: #1f2937;
  }

  .alert {
    border-radius: 8px;
  }

  .form-label {
    font-weight: 500;
    color: #1f2937;
  }

  .form-control {
    border-radius: 10px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .form-control:focus {
    border-color: #4f46e5;
    box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.25);
  }

  .btn-custom {
    background-color: #4f46e5;
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 600;
  }

  .btn-custom:hover {
    background-color: #4338ca;
  }

  @media (max-width: 768px) {
    .login-wrapper {
      flex-direction: column;
    }

    .login-left,
    .login-right {
      flex: 1;
      padding: 2rem;
    }
  }
</style>

<div class="login-wrapper">
  <!-- Left branding -->
  <div class="login-left">
    <img src="/public/images/scholario_logo.png" alt="Scholario Logo" />
    <h1>Reset Password</h1>
    <p>Set a new password for your Scholario account.</p>
    <ul>
      <li>Minimum 8 characters</li>
      <li>Include a capital letter & symbol</li>
      <li>Token expires in 15 minutes</li>
    </ul>
  </div>

  <!-- Right form -->
  <div class="login-right">
    {{#if error}}
      <div class="alert alert-danger" role="alert">
        ⚠️ {{error}}
      </div>
    {{/if}}

    {{#if success}}
      <div class="alert alert-success" role="alert">
        ✅ {{success}}
      </div>
    {{/if}}

    <h2>Set a New Password</h2>
    <form method="POST" action="/reset-password/{{token}}">
      <div class="mb-3">
        <label for="newPassword" class="form-label">New Password</label>
        <input
          type="password"
          class="form-control"
          id="newPassword"
          name="newPassword"
          required
        />
      </div>

      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm New Password</label>
        <input
          type="password"
          class="form-control"
          id="confirmPassword"
          name="confirmPassword"
          required
        />
      </div>

      <div class="d-grid gap-2 mb-3">
        <button type="submit" class="btn btn-custom btn-lg">
          <i class="bi bi-check-circle me-2"></i> Reset Password
        </button>
      </div>
    </form>

    <div class="text-center mt-3">
      <a href="/" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to Login
      </a>
    </div>
  </div>
</div>
