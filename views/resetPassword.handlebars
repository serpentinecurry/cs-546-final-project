<div class="login-wrapper">
  <!-- Left branding -->
  <div class="login-left">
    <img src="/public/images/scholario_logo.png" alt="Scholario Logo" />
    <h1>Reset Password</h1>
    <p>Set a new password for your Scholario account.</p>
    <ul>
      <li>Minimum 8 characters</li>
      <li>Include a capital letter & symbol</li>
      <li>Token expires in 15 minutes</li>
    </ul>
  </div>

  <!-- Right form -->
  <div class="login-right">
    {{#if error}}
      <div class="alert alert-danger" role="alert">
        ⚠️ {{error}}
      </div>
    {{/if}}

    {{#if success}}
      <div class="alert alert-success" role="alert">
        ✅ {{success}}
      </div>
    {{/if}}

    <h2>Set a New Password</h2>
    <form method="POST" action="/reset-password/{{token}}">
      <div class="mb-3">
        <label for="newPassword" class="form-label">New Password</label>
        <input
          type="password"
          class="form-control"
          id="newPassword"
          name="newPassword"
          required
        />
      </div>

      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm New Password</label>
        <input
          type="password"
          class="form-control"
          id="confirmPassword"
          name="confirmPassword"
          required
        />
      </div>

      <div class="d-grid gap-2 mb-3">
        <button type="submit" class="btn btn-custom btn-lg">
          <i class="bi bi-check-circle me-2"></i> Reset Password
        </button>
      </div>
    </form>

    <div class="text-center mt-3">
      <a href="/" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to Login
      </a>
    </div>
  </div>
</div>
