<div class="reset-wrapper">
  <!-- Logo -->
  <div class="reset-logo">
    <img src="/public/images/scholario_logo.png" alt="Scholario Logo" />
  </div>

  <!-- Title -->
  <div class="reset-title">
    <h1><i class="bi bi-unlock me-2"></i> Forgot Your Password?</h1>
    <p class="text-muted">Enter your email below and we'll send you a secure reset link.</p>
  </div>

  <!-- Status Messages -->
  {{#if error}}
    <div class="alert alert-danger text-center">⚠️ {{error}}</div>
  {{/if}}

  {{#if success}}
    <div class="alert alert-success text-center">✅ {{success}}</div>
  {{/if}}

  <!-- Form -->
  <form method="POST" action="/forgot-password">
    <div class="mb-3">
      <label for="email" class="form-label">Email Address</label>
      <input type="email" class="form-control" id="email" name="email" required />
    </div>

    <div class="d-grid gap-2 mt-4">
      <button type="submit" class="btn btn-primary btn-lg">
        <i class="bi bi-envelope-at-fill me-2"></i> Send Reset Link
      </button>
    </div>
  </form>

  <div class="text-center mt-4">
    <a href="/" class="fw-semibold text-decoration-none link-hover">
      <i class="bi bi-arrow-left-circle me-1"></i> Back to Login
    </a>
  </div>
</div>
