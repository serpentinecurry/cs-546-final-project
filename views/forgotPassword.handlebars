<style>
  body {
    background-color: #f1f5f9;
    font-family: "Segoe UI", sans-serif;
  }

  .reset-wrapper {
    max-width: 850px;
    margin: 4rem auto;
    background-color: white;
    padding: 3rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
    animation: fadeInUp 0.6s ease;
  }

  @keyframes fadeInUp {
    0% {
      transform: translateY(20px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .reset-logo {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .reset-logo img {
    height: 90px;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .reset-title {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .reset-title h1 {
    font-size: 2.2rem;
    font-weight: 700;
    color: #4f46e5;
  }

  .reset-title p {
    color: #4b5563;
  }

  .form-label {
    font-weight: 500;
    color: #1f2937;
  }

  .form-control {
    border-radius: 10px;
  }

  .btn-primary {
    background-color: #4f46e5;
    border-color: #4f46e5;
    font-weight: 600;
    border-radius: 10px;
  }

  .btn-primary:hover {
    background-color: #4338ca;
  }

  .text-muted li {
    margin-bottom: 0.4rem;
  }

  .link-hover {
    color: #4f46e5;
    transition: all 0.2s ease;
  }

  .link-hover:hover {
    text-decoration: underline;
    color: #4338ca;
  }
</style>

<div class="reset-wrapper">
  <!-- Logo -->
  <div class="reset-logo">
    <img src="/public/images/scholario_logo.png" alt="Scholario Logo" />
  </div>

  <!-- Title -->
  <div class="reset-title">
    <h1><i class="bi bi-unlock me-2"></i> Forgot Your Password?</h1>
    <p class="text-muted">Enter your email below and we’ll send you a secure reset link.</p>
  </div>

  <!-- Status Messages -->
  {{#if error}}
    <div class="alert alert-danger text-center">⚠️ {{error}}</div>
  {{/if}}

  {{#if success}}
    <div class="alert alert-success text-center">✅ {{success}}</div>
  {{/if}}

  <!-- Form -->
  <form method="POST" action="/forgot-password">
    <div class="mb-3">
      <label for="email" class="form-label">Email Address</label>
      <input type="email" class="form-control" id="email" name="email" required />
    </div>

    <div class="d-grid gap-2 mt-4">
      <button type="submit" class="btn btn-primary btn-lg">
        <i class="bi bi-envelope-at-fill me-2"></i> Send Reset Link
      </button>
    </div>
  </form>

  <div class="text-center mt-4">
    <a href="/" class="fw-semibold text-decoration-none link-hover">
      <i class="bi bi-arrow-left-circle me-1"></i> Back to Login
    </a>
  </div>
</div>
