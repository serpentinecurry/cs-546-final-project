<!-- views/student/student.handlebars -->
<header class="header d-flex justify-content-between align-items-center px-4 py-3">
  <div class="d-flex align-items-center gap-3">
    <a href="/student" class="d-flex align-items-center text-decoration-none header-logo">
      <img src="/public/images/scholario_logo.png" alt="Scholario Logo">
      <div class="ms-3 text-start">
        <h1 class="text-white fw-bold mb-0" style="font-size: 1.85rem;">Scholario</h1>
      </div>
    </a>
  </div>

  <div class="dropdown">
    <button class="btn btn-transparent border-0 dropdown-toggle d-flex align-items-center gap-2 text-white"
            type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
      <span class="user-avatar">
        <i class="bi bi-person"></i>
      </span>
      <span class="d-none d-sm-block text-start">
        <span class="fw-semibold">{{user.fullName}}</span>
      </span>
    </button>
    <ul class="dropdown-menu dropdown-menu-end shadow-sm p-2" aria-labelledby="userDropdown" style="min-width: 220px;">
      <li class="px-3 py-1 text-muted small">
        Logged in as <strong>{{user.email}}</strong>
      </li>
      <li class="px-3 py-1 text-muted small">
        Role: <strong class="text-capitalize">{{user.role}}</strong>
      </li>
      <li><hr class="dropdown-divider"></li>
      <li><a class="dropdown-item" href="/student/profile">Profile</a></li>
      <li><a class="dropdown-item text-danger fw-semibold" href="/logout">Logout</a></li>
    </ul>
  </div>
</header>

<div class="d-flex">
  <aside class="sidebar">
    <ul class="nav">
      <li class="nav-item">
        <a href="/student/dashboard" class="nav-link {{#ifEquals currentPage 'dashboard'}}active{{/ifEquals}}">
          <i class="bi bi-speedometer2"></i> Dashboard
        </a>
      </li>
      <li class="nav-item">
        <a href="/student/all-courses" class="nav-link {{#ifEquals currentPage 'all-courses'}}active{{/ifEquals}}">
          <i class="bi bi-book"></i> All Courses
        </a>
      </li>
      <li class="nav-item">
        <a href="/student/my-courses" class="nav-link {{#ifEquals currentPage 'my-courses'}}active{{/ifEquals}}">
          <i class="bi bi-book"></i> My Courses
        </a>
      </li>
      <li class="nav-item">
        <a href="/student/absence-request" class="nav-link {{#ifEquals currentPage 'absence-request'}}active{{/ifEquals}}">
          <i class="bi bi-file-earmark-text"></i> Absence Request
        </a>
      </li>
      <li class="nav-item">
        <a href="/student/calendar" class="nav-link {{#ifEquals currentPage 'calendar'}}active{{/ifEquals}}">
          <i class="bi bi-calendar-event"></i> Calendar
        </a>
      </li>
      <li class="nav-item">
        <a href="/student/request-change" class="nav-link {{#ifEquals currentPage 'requestChangeForm'}}active{{/ifEquals}}">
          <i class="bi bi-gear"></i> Request Changes
        </a>
      </li>
      <li class="nav-item">
        <a href="/student/contact-tas" class="nav-link {{#ifEquals currentPage 'cta'}}active{{/ifEquals}}">
          <i class="bi bi-chat-dots"></i> Contact TAs
        </a>
      </li>
      <li class="nav-item">
        <a href="/student/inbox" class="nav-link {{#ifEquals currentPage 'studentInbox'}}active{{/ifEquals}}">
          <i class="bi bi-inbox"></i> Inbox
        </a>
      </li>

      {{#ifEquals user.role "ta"}}
        <li class="nav-item">
          <a href="/student/ta/officeHour" class="nav-link {{#ifEquals currentPage 'taOfficeHours'}}active{{/ifEquals}}">
            <i class="bi bi-calendar-event"></i> Manage Office Hours <span class="badge bg-info ms-2">TA</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/student/ta/messages" class="nav-link {{#ifEquals currentPage 'taMessages'}}active{{/ifEquals}}">
            <i class="bi bi-envelope"></i> Student Messages <span class="badge bg-info ms-2">TA</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/student/ta/contact-students" class="nav-link {{#ifEquals currentPage 'contactStudents'}}active{{/ifEquals}}">
            <i class="bi bi-people"></i> Contact Students <span class="badge bg-info ms-2">TA</span>
          </a>
        </li>
      {{/ifEquals}}
    </ul>
  </aside>

  <main class="main">
    <div class="content-card">
      {{#if partialToRender}}
        {{> (lookup . 'partialToRender') }}
      {{else}}
        <div class="text-center">
          <h2>Welcome, {{user.firstName}} ðŸ‘‹</h2>
          <p class="text-muted">Navigate through your student dashboard using the menu on the left.</p>
        </div>
      {{/if}}
    </div>
  </main>
</div>

<footer class="footer">
  &copy; 2025 Scholario. Crafted with ðŸ’™ to empower learners.
</footer>
