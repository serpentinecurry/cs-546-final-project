<div class="container py-4">
    <h2 class="text-center mb-5 text-primary fw-bold display-6">
        <i class="bi bi-mortarboard-fill me-2"></i> My Courses
    </h2>

    {{#if error}}
        <div class="alert alert-danger text-center fs-6 w-75 mx-auto">
            ⚠️ {{error}}
        </div>
    {{/if}}

    {{#if courses.length}}
        <div class="row g-4 justify-content-center">
            {{#each courses}}
                <div class="col-md-6 col-lg-4 d-flex">
                    <div class="card course-card p-4 w-100">
                        <div>
                            <h5 class="course-title mb-2">📖 {{this.courseName}}</h5>
                            <p class="course-meta mb-1 fw-bold">🆔 {{this.courseCode}}</p>
                            {{#if this.professor}}
                                <p class="course-meta">👨‍🏫 {{this.professor.firstName}} {{this.professor.lastName}}</p>
                            {{/if}}
                        </div>

                        <div class="action-buttons mt-3">
                            <a href="/student/courses/{{this._id}}" class="btn btn-outline-primary btn-tubular fw-bold">
                                <i class="bi bi-arrow-right-circle me-1"></i> Course Page
                            </a>
                            <form method="POST" action="/student/unenroll/{{this._id}}">
                                <button type="submit"
                                        class="btn btn-outline-danger btn-tubular fw-bold"
                                        onclick="return confirm('Are you sure you want to un-enroll from this course?');">
                                    <i class="bi bi-x-circle me-1"></i> Un-enroll
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p class="text-center text-muted fs-5 mt-5">📭 You are not enrolled in any courses yet.</p>
    {{/if}}
</div>
