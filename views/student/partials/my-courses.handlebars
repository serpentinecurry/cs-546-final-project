<style>
  .course-card {
    border: none;
    border-radius: 16px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    background-color: #fff;
  }

  .course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .btn-tubular {
    border-radius: 50px;
    padding: 0.45rem 1.2rem;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
  }

  .btn-tubular:hover {
    transform: scale(1.03);
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
  }

  .course-title {
    font-size: 1.35rem;
    font-weight: 600;
    color: #0d6efd;
  }

  .course-meta {
    font-size: 0.95rem;
    color: #6c757d;
  }
</style>

<div class="container py-4">
  <h2 class="text-center mb-5 text-primary fw-bold display-6">
    <i class="bi bi-mortarboard-fill me-2"></i> My Courses
  </h2>

  {{#if error}}
    <div class="alert alert-danger text-center fs-6 w-75 mx-auto">
      ⚠️ {{error}}
    </div>
  {{/if}}

  {{#if courses.length}}
    <div class="row g-4 justify-content-center">
      {{#each courses}}
        <div class="col-md-8 col-lg-5">
          <div class="card p-4 h-100 shadow-sm course-card">
            <h5 class="course-title mb-2">📖 {{this.courseName}}</h5>
            <p class="course-meta mb-1">🆔 {{this.courseCode}}</p>

            {{#if this.professor}}
              <p class="course-meta mb-2">👨‍🏫 {{this.professor.firstName}} {{this.professor.lastName}}</p>
            {{/if}}

            <div class="d-flex gap-2 mt-3">
              <a href="/student/courses/{{this._id}}" class="btn btn-outline-primary w-100 btn-tubular">
                ➡️ Go to Course Page
              </a>

              <form method="POST" action="/student/unenroll/{{this._id}}" class="w-100">
                <button type="submit"
                        class="btn btn-outline-danger w-100 btn-tubular"
                        onclick="return confirm('Are you sure you want to un-enroll from this course?');">
                  🚫 Un-enroll
                </button>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="text-center text-muted fs-5 mt-5">📭 You are not enrolled in any courses yet.</p>
  {{/if}}
</div>
