<style>
    .course-card {
        border: none;
        border-radius: 16px;
        background-color: #fff;
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.06);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        min-height: 280px;
    }

    .course-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .btn-tubular {
        border-radius: 50px;
        padding: 0.5rem 1.25rem;
        font-size: 0.95rem;
        font-weight: 500;
        white-space: nowrap;
        transition: all 0.2s ease-in-out;
        width: 100%;
    }

    .btn-tubular:hover {
        transform: scale(1.03);
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    }

    .course-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #3b3f5c;
        text-align: center;
        margin-bottom: 0.75rem;
    }

    .course-meta {
        font-size: 1.05rem;
        color: #555;
        text-align: center;
        margin-bottom: 0.5rem;
    }

    .course-meta i {
        color: #6366f1;
        margin-right: 6px;
    }

    .action-buttons {
        display: flex;
        gap: 0.75rem;
        margin-top: auto;
        justify-content: center;
        flex-wrap: wrap;
    }

    .action-buttons form,
    .action-buttons a {
        flex: 1 1 45%;
    }
</style>

<div class="container py-4">
    <h2 class="text-center mb-5 text-primary fw-bold display-6">
        <i class="bi bi-mortarboard-fill me-2"></i> My Courses
    </h2>

    {{#if error}}
        <div class="alert alert-danger text-center fs-6 w-75 mx-auto">
            ‚ö†Ô∏è {{error}}
        </div>
    {{/if}}

    {{#if courses.length}}
        <div class="row g-4 justify-content-center">
            {{#each courses}}
                <div class="col-md-6 col-lg-4 d-flex">
                    <div class="card course-card p-4 w-100">
                        <div>
                            <h5 class="course-title mb-2">üìñ {{this.courseName}}</h5>
                            <p class="course-meta mb-1 fw-bold">üÜî {{this.courseCode}}</p>
                            {{#if this.professor}}
                                <p class="course-meta">üë®‚Äçüè´ {{this.professor.firstName}} {{this.professor.lastName}}</p>
                            {{/if}}
                        </div>

                        <div class="action-buttons mt-3">
                            <a href="/student/courses/{{this._id}}" class="btn btn-outline-primary btn-tubular fw-bold">
                                <i class="bi bi-arrow-right-circle me-1"></i> Course Page
                            </a>
                            <form method="POST" action="/student/unenroll/{{this._id}}">
                                <button type="submit"
                                        class="btn btn-outline-danger btn-tubular fw-bold"
                                        onclick="return confirm('Are you sure you want to un-enroll from this course?');">
                                    <i class="bi bi-x-circle me-1"></i> Un-enroll
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p class="text-center text-muted fs-5 mt-5">üì≠ You are not enrolled in any courses yet.</p>
    {{/if}}
</div>
