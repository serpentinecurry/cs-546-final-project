<style>
    .course-card {
        border: 1px solid #dee2e6;
        border-radius: 20px;
        transition: all 0.25s ease;
        padding: 1.75rem 1.5rem;
        background: #ffffff;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    }

    .course-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.08);
    }

    .course-header {
        font-size: 1.4rem;
        font-weight: 700;
        color: #2c52e0;
        margin-bottom: 0.2rem;
    }

    .course-meta {
        font-size: 0.95rem;
        color: #495057;
        margin-bottom: 0.35rem;
    }

    .course-schedule {
        font-size: 0.93rem;
        color: #333;
        margin-top: 0.75rem;
    }

    .schedule-icon {
        font-weight: 600;
        color: #ff4d4f;
        margin-right: 6px;
    }

    .badge-day-container {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
    }

    .badge-day {
        display: inline-block;
        background: #edf1f5;
        color: #333;
        font-size: 0.8rem;
        font-weight: 500;
        margin-right: 6px;
        padding: 4px 10px;
        border-radius: 20px;
        white-space: nowrap;
    }


    .enroll-status {
        font-size: 0.9rem;
        padding: 0.5rem;
        border-radius: 20px;
        font-weight: 600;
        text-align: center;
    }

    .btn-enroll {
        background: linear-gradient(to right, #4e73df, #3756f7);
        border: none;
        font-weight: 600;
        color: #fff;
        padding: 0.55rem 1.25rem;
        border-radius: 50px;
        width: 100%;
        transition: all 0.25s ease;
    }

    .btn-enroll:hover {
        background: linear-gradient(to right, #3756f7, #1e40af);
    }

    .alert-danger {
        font-size: 0.85rem;
        margin-bottom: 0.75rem;
        padding: 0.5rem 1rem;
        border-radius: 10px;
    }
</style>


<div class="container py-4">
    <h2 class="text-center mb-4 text-primary fw-bold display-6">
        <i class="bi bi-journals me-2"></i> All Available Courses
    </h2>

    {{#if successMessage}}
        <div class="alert alert-success alert-dismissible fade show w-75 mx-auto text-center" role="alert">
            {{successMessage}}
        </div>
    {{/if}}

    <!-- üîç Search Bar -->
    <form method="GET" action="/student/all-courses" class="w-75 mx-auto mb-5">
        <div class="input-group shadow-sm search-wrapper p-2">
            <span class="input-group-text bg-transparent border-0 search-icon">üîç</span>
            <input
                    type="text"
                    name="search"
                    class="form-control search-input"
                    placeholder="Search by course name or code..."
                    value="{{searchQuery}}"
                    aria-label="Search Courses"
            />
            <button class="btn btn-outline-primary px-4" type="submit">Search</button>

            {{#if searchQuery}}
                <a href="/student/all-courses" class="btn btn-outline-danger px-4">Clear</a>
            {{/if}}
        </div>
    </form>

    <!-- ‚ö†Ô∏è Error -->
    {{#if error}}
        <div class="alert alert-danger text-center fs-6 w-75 mx-auto">
            ‚ö†Ô∏è {{error}}
        </div>
    {{/if}}

    <!-- üìã Course Grid -->
    {{#if courses.length}}
        <div class="row g-4">
            {{#each courses}}
                <div class="col-md-6 col-lg-4">
                    <div class="card course-card p-4 h-100 shadow-sm bg-white">
                        <h5 class="course-header">üìò {{this.courseName}}</h5>
                        <p class="course-meta">üÜî {{this.courseCode}}</p>

                        {{#if this.professor}}
                            <p class="course-meta">üë®‚Äçüè´ {{this.professor.firstName}} {{this.professor.lastName}}</p>
                        {{else}}
                            <p class="course-meta fst-italic">No professor assigned</p>
                        {{/if}}

                        <p class="course-meta">üë• Enrolled: <strong>{{this.activeCount}}</strong> / {{this.maxLimit}}</p>

                        <div class="course-schedule">
                            <p class="mb-1 d-flex align-items-center">
                                <span class="schedule-icon me-1">üìÖ Days:</span>
                                <span class="badge-day-container">
                                    {{#each this.courseMeetingDays}}
                                        <span class="badge-day">{{this.day}}</span>
                                    {{/each}}
                                </span>
                            </p>
                            <p class="mb-2">
                                <span class="schedule-icon">‚è∞ Times:</span>
                                {{#each this.courseMeetingTime}}
                                    <span class="d-block ms-4">{{this.startTime}} ‚Äì {{this.endTime}}</span>
                                {{/each}}
                            </p>
                        </div>


                        {{#if ../error}}
                            {{#if (eq ../errorCourseId this._id)}}
                                <div class="alert alert-danger text-center">
                                    {{../error}}
                                </div>
                            {{/if}}
                        {{/if}}

                        {{#if this.isEnrolled}}
                            <span class="badge bg-success text-light enroll-status text-center w-100">‚úÖ Already Enrolled</span>
                        {{else if this.alreadyApplied}}
                            <span class="badge bg-secondary text-light enroll-status text-center w-100">‚è≥ Already Applied</span>
                        {{else if this.isCourseFull}}
                            <span class="badge bg-danger text-light enroll-status text-center w-100">‚ùå Course Full</span>
                        {{else}}
                            <form method="POST" action="/student/enroll/{{this._id}}">
                                <button type="submit" class="btn btn-enroll">üì• Apply to Enroll</button>
                            </form>
                        {{/if}}

                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p class="text-center text-muted fs-5 mt-5">üö´ No courses available.</p>
    {{/if}}
</div>
