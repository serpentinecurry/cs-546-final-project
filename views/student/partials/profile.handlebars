<div class="container py-4">
    <h2 class="mb-4 d-flex align-items-center">
        <i class="bi bi-person-fill text-primary me-2 fs-3"></i>
        <span>Your Profile</span>
    </h2>

    <div class="row g-4 align-items-stretch">
        <!-- Profile Avatar Card -->
        <div class="col-md-4">
            <div class="card text-center shadow border-0 p-4 rounded-4 bg-white h-100">
                <div class="user-avatar bg-light d-flex justify-content-center align-items-center rounded-circle mx-auto mb-3 shadow-sm"
                     style="width: 110px; height: 110px;">
                    <i class="bi bi-person text-secondary fs-1"></i>
                </div>
                <h5 class="fw-bold mb-1 text-dark">{{user.fullName}}</h5>
                <p class="text-muted text-capitalize mb-0">
                    <span class="fw-semibold text-dark">Role:</span> {{user.role}}
                </p>

            </div>
        </div>

        <!-- Profile Details -->
        <div class="col-md-8">
            <div class="card shadow border-0 p-4 rounded-4 bg-white h-100">
                <h5 class="mb-4 d-flex align-items-center text-secondary">
                    <i class="bi bi-info-circle-fill me-2"></i> Student Details
                </h5>

                <div class="row gy-3">
                    <div class="col-sm-6">
                        <label class="fw-semibold text-muted">Email</label>
                        <div class="text-dark">{{user.email}}</div>
                    </div>
                    <div class="col-sm-6">
                        <label class="fw-semibold text-muted">Major</label>
                        <div class="text-dark">{{user.major}}</div>
                    </div>
                    <div class="col-sm-6">
                        <label class="fw-semibold text-muted">Date of Birth</label>
                        <div class="text-dark">{{user.dateOfBirth}}</div>
                    </div>
                    <div class="col-sm-6">
                        <label class="fw-semibold text-muted">Access Status</label>
                        <span class="badge bg-{{#ifEquals user.accessStatus
                                                          'approved'}}success{{else}}warning text-dark{{/ifEquals}} text-capitalize px-3 py-1 rounded-pill">
                            {{user.accessStatus}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Button -->
    <div class="text-end mt-4">
        <a href="/student/profile/edit" class="btn btn-outline-primary px-4 py-2 rounded-pill shadow-sm">
            <i class="bi bi-pencil-square me-2"></i> Edit Profile
        </a>
    </div>
    <div class="text-end mt-4">
        <a href="/student/profile/change-password" class="btn btn-outline-danger px-4 py-2 rounded-pill shadow-sm">
            <i class="bi bi-shield-lock me-2"></i> Change Password
        </a>
    </div>

</div>
