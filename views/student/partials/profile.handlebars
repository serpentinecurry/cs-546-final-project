<div class="container">
  <h2 class="mb-4 d-flex align-items-center">
    <i class="bi bi-person-fill text-primary me-2 fs-3"></i>
    <span>Your Profile</span>
  </h2>

  <div class="row g-4">
    <!-- Profile card -->
    <div class="col-md-4">
      <div class="card text-center shadow-sm border-0 p-4 rounded">
        <div class="user-avatar bg-light d-flex justify-content-center align-items-center rounded-circle mx-auto mb-3" style="width: 110px; height: 110px;">
          <i class="bi bi-person fs-1 text-secondary"></i>
        </div>
        <h5 class="fw-bold mb-1">{{user.fullName}}</h5>
        <div class="text-muted text-capitalize">{{user.role}}</div>
      </div>
    </div>

    <!-- Details -->
    <div class="col-md-8">
      <div class="card shadow-sm border-0 p-4 rounded">
        <h5 class="mb-4 d-flex align-items-center">
          <i class="bi bi-file-earmark-text-fill text-secondary me-2"></i>
          Student Details
        </h5>
        <div class="row mb-3">
          <div class="col-sm-4 fw-semibold">Email:</div>
          <div class="col-sm-8">{{user.email}}</div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4 fw-semibold">Major:</div>
          <div class="col-sm-8">{{user.major}}</div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4 fw-semibold">Date of Birth:</div>
          <div class="col-sm-8">{{user.dateOfBirth}}</div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4 fw-semibold">Access Status:</div>
          <div class="col-sm-8 text-capitalize">{{user.accessStatus}}</div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4 fw-semibold">Enrolled Courses:</div>
          <div class="col-sm-8">{{user.enrolledCourses.length}}</div>
        </div>
        {{#if user.taForCourses.length}}
        <div class="row">
          <div class="col-sm-4 fw-semibold">TA For Courses:</div>
          <div class="col-sm-8">{{user.taForCourses.length}}</div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="text-end mt-3">
  <a href="/student/profile/edit" class="btn btn-outline-primary">
    <i class="bi bi-pencil-square me-1"></i> Edit Profile
  </a>
</div>

</div>
