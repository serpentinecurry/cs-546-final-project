<h1>📚 Courses</h1>

<a href="/admin/courses/create">
  <button style="margin-bottom: 1rem;">➕ Create New Course</button>
</a>

{{#if courses.length}}
  <ul>
    {{#each courses}}
      <li>
        <a href="/admin/courses/{{this._id}}">
          <strong>{{this.courseName}}</strong>
        </a>
        ({{this.courseCode}})
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No courses available yet.</p>
{{/if}}

<br />
<a href="/admin">⬅️ Back to Admin Dashboard</a>