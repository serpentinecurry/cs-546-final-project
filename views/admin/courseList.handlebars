<h1 class="text-center mb-5 display-5 text-primary">📚 Courses</h1>

<div class="text-center mb-4">
  <a href="/admin/courses/create" class="btn btn-success btn-lg btn-animated">➕ Create New Course</a>
</div>

{{#if courses.length}}
  <div class="container">
    <div class="row g-4">
      {{#each courses}}
        <div class="col-md-6 col-lg-4">
          <a href="/admin/courses/{{this._id}}" class="course-link">
            <div class="card course-card h-100">
              <div class="course-title">📖 {{this.courseName}}</div>
              <div class="course-code">🆔 {{this.courseCode}}</div>
              {{#if this.professor}}
                <div class="course-professor">👨‍🏫 {{this.professor.firstName}} {{this.professor.lastName}}</div>
              {{else}}
                <div class="course-professor text-muted fst-italic">No professor assigned</div>
              {{/if}}
            </div>
          </a>
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <p class="text-center text-muted fs-5 mt-4">🚫 No courses available yet.</p>
{{/if}}

<div class="text-center mt-5">
  <a href="/admin" class="btn btn-outline-secondary btn-animated">⬅️ Back to Admin Dashboard</a>
</div>
