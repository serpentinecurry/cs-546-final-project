<h1 class="text-center mb-4">📚 Courses</h1>

<div class="d-flex justify-content-center mb-4">
  <a href="/admin/courses/create" class="btn btn-success">➕ Create New Course</a>
</div>

{{#if courses.length}}
  <div class="list-group">
    {{#each courses}}
      <a href="/admin/courses/{{this._id}}" class="list-group-item list-group-item-action">
        <strong>{{this.courseName}}</strong> ({{this.courseCode}})
      </a>
    {{/each}}
  </div>
{{else}}
  <p class="text-center">No courses available yet.</p>
{{/if}}

<br />
<div class="text-center">
  <a href="/admin" class="btn btn-secondary">⬅️ Back to Admin Dashboard</a>
</div>
