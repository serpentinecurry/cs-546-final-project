<h1>➕ Create New Course</h1>
{{#if error}}
  <p style="color:red;">⚠️ {{error}}</p>
{{/if}}
<form method="POST" action="/admin/courses/create">
  <label>Course Name:</label><br>
  <input type="text" name="courseName" id="courseName" value="{{formData.courseName}}" required><br><br>

  <label>Course Code:</label><br>
  <input type="text" name="courseCode" id="courseCode" value="{{formData.courseCode}}" required><br><br>

  <label>Assign Professor:</label><br>
  <select name="professorId" required>
    {{#each professors}}
      <option value="{{this._id}}">{{this.firstName}} {{this.lastName}} ({{this.email}})</option>
    {{/each}}
  </select><br><br>

  <button type="submit">✅ Create Course</button>
</form>

<br>
<a href="/admin/courses">⬅️ Back to Courses List</a>
