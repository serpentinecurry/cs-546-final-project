

<h1 class="text-center mb-5 display-5 text-primary">➕ Create New Course</h1>

{{#if error}}
  <div class="alert alert-danger text-center mx-auto" style="max-width: 700px;" role="alert">
    ⚠️ {{error}}
  </div>
{{/if}}

<form method="POST" action="/admin/courses/create" class="form-card mb-4">

  <div class="mb-4">
    <label for="courseName" class="form-label">📘 Course Name</label>
    <input type="text" name="courseName" id="courseName" class="form-control form-control-lg" value="{{formData.courseName}}" placeholder="e.g., Introduction to Machine Learning" required>
  </div>

  <div class="mb-4">
    <label for="courseCode" class="form-label">🔤 Course Code</label>
    <input type="text" name="courseCode" id="courseCode" class="form-control form-control-lg" value="{{formData.courseCode}}" placeholder="e.g., CSE101" required>
  </div>

  <div class="mb-4">
    <label for="professorId" class="form-label">👨‍🏫 Assign Professor</label>
    <select name="professorId" id="professorId" class="form-select form-select-lg" required>
      <option value="" disabled {{#unless formData.professorId}}selected{{/unless}}>Select a professor</option>
      {{#each professors}}
        <option value="{{this._id}}" {{#if (eq this._id ../formData.professorId)}}selected{{/if}}>
          {{this.firstName}} {{this.lastName}} ({{this.email}})
        </option>
      {{/each}}
    </select>
  </div>

  <div class="text-center mt-4">
    <button type="submit" class="btn btn-success btn-lg btn-animated">✅ Create Course</button>
  </div>
</form>

<div class="text-center">
  <a href="/admin/courses" class="btn btn-outline-secondary mt-2 btn-animated">⬅️ Back to Courses List</a>
</div>
