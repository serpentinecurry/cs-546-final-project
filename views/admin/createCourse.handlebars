<h1 class="text-center mb-4">➕ Create New Course</h1>

{{#if error}}
  <div class="alert alert-danger" role="alert">
    ⚠️ {{error}}
  </div>
{{/if}}

<form method="POST" action="/admin/courses/create" class="card p-4 shadow-sm mb-4">

  <div class="mb-3">
    <label for="courseName" class="form-label">Course Name</label>
    <input type="text" name="courseName" id="courseName" class="form-control" value="{{formData.courseName}}" required>
  </div>

  <div class="mb-3">
    <label for="courseCode" class="form-label">Course Code</label>
    <input type="text" name="courseCode" id="courseCode" class="form-control" value="{{formData.courseCode}}" required>
  </div>

  <div class="mb-3">
    <label for="professorId" class="form-label">Assign Professor</label>
    <select name="professorId" id="professorId" class="form-select" required>
      {{#each professors}}
        <option value="{{this._id}}" {{#if (eq this._id ../formData.professorId)}}selected{{/if}}>
          {{this.firstName}} {{this.lastName}} ({{this.email}})
        </option>
      {{/each}}
    </select>
  </div>

  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-success">✅ Create Course</button>
  </div>
</form>

<div class="text-center">
  <a href="/admin/courses" class="btn btn-secondary">⬅️ Back to Courses List</a>
</div>
