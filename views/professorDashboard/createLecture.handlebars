<a href="/professor/course/{{courseId}}" class="btn btn-outline-secondary mb-4 d-inline-flex align-items-center gap-2">
  <i class="bi bi-arrow-left"></i> Back to Course
</a>

<h1 class="mb-2 fw-bold text-primary">Create a New Lecture</h1>

<div class="card shadow-sm border-0 p-4 bg-light rounded-4">
  {{#if error}}
    <div class="alert alert-danger" role="alert">
      {{error}}
    </div>
  {{/if}}

  <form method="POST" action="/professor/course/{{courseId}}/lecture/create">

    <!-- Lecture Title -->
    <div class="mb-3">
      <label for="lectureTitle" class="form-label">Lecture Title</label>
      <input
        type="text"
        class="form-control"
        id="lectureTitle"
        name="lectureTitle"
        placeholder="e.g., Introduction to Data Structures"
        required
        value="{{formData.lectureTitle}}"
      >
    </div>

    <!-- Date -->
    <div class="mb-3">
      <label for="lectureDate" class="form-label">Lecture Date</label>
      <input
        type="date"
        class="form-control"
        id="lectureDate"
        name="lectureDate"
        required
        value="{{formData.lectureDate}}"
      >
    </div>

    <!-- Time -->
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="lectureStartTime" class="form-label">Start Time</label>
        <input
          type="time"
          class="form-control"
          id="lectureStartTime"
          name="lectureStartTime"
          required
          value="{{formData.lectureStartTime}}"
        >
      </div>
      <div class="col-md-6">
        <label for="lectureEndTime" class="form-label">End Time</label>
        <input
          type="time"
          class="form-control"
          id="lectureEndTime"
          name="lectureEndTime"
          required
          value="{{formData.lectureEndTime}}"
        >
      </div>
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Lecture Description</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        rows="4"
        placeholder="Brief overview of what the lecture will cover..."
        required
      >{{formData.description}}</textarea>
    </div>

    <!-- Materials -->
    <div class="mb-4">
      <label for="materialsLink" class="form-label">Lecture Materials Link</label>
      <input
        type="url"
        class="form-control"
        id="materialsLink"
        name="materialsLink"
        placeholder="https://drive.google.com/your-materials-link"
        required
        value="{{formData.materialsLink}}"
      >
    </div>

    <button type="submit" class="btn btn-primary btn-lg w-100">
      <i class="bi bi-plus-circle me-2"></i> Create Lecture
    </button>
  </form>
</div>
