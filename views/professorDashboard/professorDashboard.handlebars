<style>
  body {
    margin: 0;
    padding: 0;
    background-color: #f1f5f9;
    font-family: "Segoe UI", sans-serif;
  }

  .wrapper {
    display: flex;
    min-height: 100vh;
    overflow: hidden;
  }

  .left-panel {
    background: linear-gradient(135deg, #4f46e5, #0ea5e9);
    color: white;
    padding: 4rem;
    flex: 1.3;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .left-panel img {
    max-width: 160px;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
    margin-bottom: 1.5rem;
  }

  .left-panel h1 {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 0.8rem;
  }

  .left-panel p {
    font-size: 1.15rem;
    max-width: 400px;
    margin-bottom: 2rem;
    color: #f0f9ff;
  }

  .right-panel {
    flex: 1;
    background-color: white;
    padding: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .right-panel h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
    color: #1f2937;
  }

  .courseList {
    list-style: none;
    padding-left: 0;
  }

  .courseList li {
    padding: 0.75rem 1rem;
    margin-bottom: 0.5rem;
    background-color: #e2e8f0;
    border-radius: 8px;
    font-size: 1.1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .courseList a {
    text-decoration: none;
    color: #4f46e5;
    font-weight: 600;
  }

  .courseList a:hover {
    text-decoration: underline;
  }

  .logout-btn {
    margin-top: 2rem;
    background-color: #ef4444;
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    text-decoration: none;
    display: inline-block;
    font-weight: 600;
  }

  .logout-btn:hover {
    background-color: #dc2626;
  }

  @media (max-width: 768px) {
    .wrapper {
      flex-direction: column;
    }

    .left-panel,
    .right-panel {
      padding: 2rem;
    }
  }
</style>

<div class="wrapper">
  <!-- Branding Side -->
  <div class="left-panel">
    <img src="/public/images/scholario_logo.png" alt="Scholario Logo" />
    <h1>Scholario</h1>
    <p>Your dashboard for managing courses and analytics with ease.</p>
  </div>

  <!-- Dashboard Content -->
  <div class="right-panel">
    <h2>Welcome, Professor {{professorName}}</h2>
    <h3 class="mb-3">Your Courses</h3>

    {{#if courses.length}}
      <ul class="courseList">
        {{#each courses}}
          <li>
            {{this.courseName}} ({{this.courseCode}})
            <a href="/professor/course/{{this._id}}/analytics">View Course</a>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>You don't have any courses assigned yet.</p>
    {{/if}}

    <a href="/logout" class="logout-btn">
      <i class="bi bi-box-arrow-left me-1"></i> Logout
    </a>
  </div>
</div>
