<div class="wrapper">
  <!-- Branding Side -->
  <div class="left-panel">
    <img src="/public/images/scholario_logo.png" alt="Scholario Logo" />
    <h1>Scholario</h1>
    <p>Your dashboard for managing courses and analytics with ease.</p>
  </div>

  <!-- Dashboard Content -->
  <div class="right-panel">
    <h2>Welcome, Professor {{professorName}}</h2>
    <h3 class="mb-3">Your Courses</h3>

    {{#if courses.length}}
      <ul class="courseList">
        {{#each courses}}
          <li>
            {{this.courseName}} ({{this.courseCode}})
            <a href="/professor/course/{{this._id}}/analytics">View Course</a>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>You don't have any courses assigned yet.</p>
    {{/if}}

    <a href="/logout" class="logout-btn">
      <i class="bi bi-box-arrow-left me-1"></i> Logout
    </a>
  </div>
</div>
