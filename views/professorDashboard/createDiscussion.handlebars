<a href="/professor/course/{{courseId}}/lecture/{{lectureId}}" class="btn btn-outline-secondary mb-4 d-inline-flex align-items-center gap-2">
  <i class="bi bi-arrow-left"></i> Back to Lecture
</a>

<h1 class="mb-2 fw-bold text-primary">Create New Discussion</h1>

<div class="card shadow-sm border-0 p-4 bg-light rounded-4">
  {{#if error}}
    <div class="alert alert-danger" role="alert">
      {{error}}
    </div>
  {{/if}}

  <form method="POST" action="/professor/course/{{courseId}}/lecture/{{lectureId}}/discussions/create">

    <div class="mb-3">
      <label for="postTitle" class="form-label">Discussion Title</label>
      <input
        type="text"
        class="form-control"
        id="postTitle"
        name="postTitle"
        placeholder="Enter a title for the discussion"
        required
        value="{{formData.postTitle}}"
      >
    </div>

    <div class="mb-3">
      <label for="postContent" class="form-label">Discussion Content</label>
      <textarea
        class="form-control"
        id="postContent"
        name="postContent"
        rows="6"
        placeholder="add your comments about the discussion here"
        required
      >{{formData.postContent}}</textarea>
    </div>

    <div class="d-flex justify-content-between">
      <a href="/professor/course/{{courseId}}/lecture/{{lectureId}}" class="btn btn-outline-secondary">
        <i class="bi bi-x-circle me-2"></i> Cancel
      </a>
      <button type="submit" class="btn btn-primary">
        <i class="bi bi-chat-left-text me-2"></i> Create Discussion
      </button>
    </div>
  </form>
</div>
