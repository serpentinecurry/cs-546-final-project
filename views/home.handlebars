<div class="login-wrapper">
  <!-- Branding Section -->
  <div class="login-left">
    <img src="/public/images/scholario_logo.png" alt="Scholario Logo" />
    <h1>Scholario</h1>
    <p>Your all-in-one virtual classroom toolkit for students and faculty.</p>

    <ul>
      <li>Track & visualize attendance effortlessly</li>
      <li>Request absences and manage submissions</li>
      <li>Manage TA office hours seamlessly</li>
      <li>Engage in lecture discussions & more</li>
    </ul>
  </div>

  <!-- Login Form Section -->
  <div class="login-right">
    {{#if error}}
      <div class="alert alert-danger" role="alert">
        ⚠️ {{error}}
      </div>
    {{/if}}

    {{#if logout}}
      <div class="alert alert-success" role="alert">
        ✅ {{logout}}
      </div>
    {{/if}}

    {{#if successMessage}}
      <div class="alert alert-success" role="alert">
        ✅ {{successMessage}}
      </div>
    {{/if}}

    <h2>Login to Your Account</h2>
    <form method="POST" action="/">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          value="{{formData.email}}"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
        />
      </div>

      <div class="d-grid gap-2 mb-3">
        <button type="submit" class="btn btn-custom btn-lg">
          Login
        </button>
      </div>
    </form>
    <div class="text-center mb-4">
  <a href="/forgot-password" class="link-hover text-decoration-none fw-semibold">
    <i class="bi bi-unlock me-1"></i> Forgot your password ?
  </a>
</div>

    <div class="text-center mt-3">
      <p>Don't have an account?</p>
      <a href="/register" class="btn btn-outline-primary">Sign Up</a>
    </div>
  </div>
</div>
